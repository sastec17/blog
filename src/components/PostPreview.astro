---
const {url, title, description, pubDate, imageURL} = Astro.props

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
})
---
<a class="post-previews" href={url}>
    <h2>{title}</h2>
        <time datetime={pubDate}>{formattedDate}</time>
        <div>
        <img src={imageURL}>
        <p>{description}</p>
    </div>
</a>


